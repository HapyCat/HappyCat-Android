<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/click">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/HappyCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/imageChange"
        app:layout_constraintStart_toStartOf="@id/imageChange"
        app:layout_constraintEnd_toEndOf="@id/imageChange"
        android:text="HappyCat"
        android:layout_marginBottom="90dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="니 점수다!"
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="@+id/HappyCat"
        app:layout_constraintEnd_toEndOf="@+id/HappyCat"
        app:layout_constraintTop_toBottomOf="@+id/HappyCat"
        app:layout_constraintBottom_toTopOf="@+id/imageChange"


        />

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/imageChange"/>


</androidx.constraintlayout.widget.ConstraintLayout>